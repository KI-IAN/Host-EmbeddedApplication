@model SharedComponents.Models.SingleSignOnModel
@{
    ViewData["Title"] = "JWT Token & User Claims";
}


<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2>JWT Token & User Claims</h2>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.JwtToken))
            {
                <h5 class="text-muted">JWT Token:</h5>
                <p class="alert alert-info">@Model.JwtToken</p>

                <h5 class="text-muted">User Claims:</h5>
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Claim Type</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.UserClaims)
                        {
                            <tr>
                                <td>@claim.Type</td>
                                <td>@claim.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> No JWT token found in the request.
                </div>
            }
        </div>
    </div>
</div>

